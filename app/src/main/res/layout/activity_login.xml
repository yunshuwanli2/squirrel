<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <include layout="@layout/top_layout" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="5dp"
        android:paddingEnd="10dp"
        android:background="@drawable/bg_text"
        android:drawableLeft="@mipmap/ic_back"
        android:gravity="center"
        android:text="返回"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="640dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_buttom"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_switch1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_switch1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/ic_sm"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="扫描开箱"
                android:textColor="@color/gray2"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_switch3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_switch3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/ic_face"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="人脸识别开箱"
                android:textColor="@color/gray2"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_switch2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_switch2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/ic_phone"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="手机号码开箱"
                android:textColor="@color/gray2"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

    </FrameLayout>

</LinearLayout>

